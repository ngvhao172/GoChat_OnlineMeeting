<style>
    body {
        background: #ffffff;
        margin-top: 20px;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }

    .me-2 {
        margin-right: .5rem !important;
    }


    .tab button {
        display: block;
        background-color: inherit;
        color: gray;
        padding: 10px;
        width: 100%;
        border: none;
        outline: none;
        text-align: center;
        cursor: pointer;
        transition: 0.3s;
        font-size: 17px;
    }

    .tab button:hover {
        background-color: #f7f6f6;
        border-left: 5px solid #fbe3a7;
    }

    .tab button.active {
        color: #FBB040;
        font-weight: 600;
        border-left: 5px solid #fbc02d;
        background-color: #efeeee;
    }

    .position-relative {
        position: relative;
    }

    .position-absolute {
        position: absolute;
        top: 50%;
        right: 20px;
        transform: translateY(-50%);
        cursor: pointer;
    }

    #message {
        display: none;
        background-color: #f1f1f1;
        color: #000;
        position: relative;
        margin-top: 10px;
        padding: 10px 20px;
    }

    #message span {
        padding: 0px 35px;
    }

    #messageMatch {
        display: none;
        position: relative;
        padding: 0px 20px;
        margin-top: 10px;
    }

    #messageMatch p {
        padding: 0px 35px;
    }

    .valid {
        color: green;
    }

    .valid:before {
        position: relative;
        left: -35px;
        content: "\2713";
        font-family: "Bootstrap Icons";
    }

    .invalid {
        color: red;
    }

    .invalid:before {
        position: relative;
        left: -35px;
        content: "\2717";
        font-family: "Bootstrap Icons";
    }

    .user-avatar {
        width: 120px;
        height: 120px;
        object-fit: cover;
    }
</style>

